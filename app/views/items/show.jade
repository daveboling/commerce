extends ../shared/template
block content
	.wrapper
		h1 Item Selection
		table
			tr
			th Name
			th Dimensions
			th Weight
			th Color
			th Quantity
			th MSRP
			th % Off
			th Item Cost
				tr
					td= item.name
					td #{item.dimensions.l} x #{item.dimensions.w} x #{item.dimensions.h}
					td= item.weight
					td(style="background-color: #{item.color}")
					td= item.quantity
					td= item.msrp
					td= item.percentOff
					td= item.cost()
		form(method="post" action="/items/#{item._id}")
			//This will override the form method above
			input(type="hidden", name="_method" value="delete")
			button Delete